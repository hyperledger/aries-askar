{
  "name": "aries-askar-nodejs",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "description": "Nodejs wrapper for Aries Askar",
  "source": "src/index",
  "main": "build/index",
  "homepage": "https://github.com/hyperledger/aries-askar/tree/main/wrappers/javascript/nodejs",
  "author": "Hyperledger (https://github.com/hyperledger)",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperledger/aries-askar",
    "directory": "wrappers/javascript/nodejs"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "check-types": "tsc --noEmit -p tsconfig.build.json",
    "check-format": "yarn prettier --check",
    "format": "yarn prettier --write",
    "prettier": "prettier --ignore-path .gitignore '**/*+(.js|json|ts|md|yml|yaml)'",
    "build": "yarn clean && yarn compile",
    "clean": "rimraf -rf ./lib",
    "compile": "tsc -p tsconfig.build.json",
    "example": "yarn --cwd example",
    "release": "release-it",
    "test": "jest",
    "start": "ts-node src/index.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@types/ffi-napi": "^4.0.5",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.31",
    "@types/ref-array-di": "^1.2.3",
    "@types/ref-struct-di": "^1.1.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "base64url": "^3.0.1",
    "jest": "^28.0.2",
    "prettier": "2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "aries-askar-shared": "*",
    "ffi-napi": "^4.0.3",
    "node-cache": "^5.1.2",
    "ref-array-di": "^1.2.2",
    "ref-napi": "^3.0.3",
    "ref-struct-di": "^1.1.1"
  }
}
